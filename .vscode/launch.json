{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: handler",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/simple-python/handler.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "start",
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd": "${workspaceFolder}/frontend"
        }
    ], 
    "compounds": [
        {
            "name": "run all",
            "configurations": ["Launch via NPM", "Python: handler"]
        }
    ]
}